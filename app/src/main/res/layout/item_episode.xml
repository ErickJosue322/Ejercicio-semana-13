<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Número de Episodio -->
            <TextView
                android:id="@+id/episodeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>

            <!-- Puntuación -->
            <TextView
                android:id="@+id/episodeScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/ic_launcher_background"
                android:drawablePadding="4dp"/>

        </LinearLayout>

        <!-- Título del Episodio -->
        <TextView
            android:id="@+id/episodeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <!-- Fecha de emisión -->
        <TextView
            android:id="@+id/episodeAired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Contenedor para badges (Filler/Recap) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/episodeFiller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filler"
                android:textColor="#FF5722"
                android:background="#1AFF5722"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/episodeRecap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recap"
                android:textColor="#2196F3"
                android:background="#1A2196F3"
                android:padding="4dp"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>